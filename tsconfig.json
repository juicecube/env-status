{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2015"],
    "outDir": "lib"
  },
  "paths": {
    "*": [
      "./types/*"
    ]
  },
  "include": [
    "src/**/*",
    "types"
  ],
  "exclude": [
    "src/__tests__"
  ]
}
